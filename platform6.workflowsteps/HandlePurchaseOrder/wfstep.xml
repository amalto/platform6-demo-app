<WorkflowStep enabled="true">
    
    <Description>
        <EN>PurchaseOrder - Accept or reject</EN>
        <FR>Commande - Accepter ou refuser</FR>
    </Description>
    
    <AllowTransactionEdit>ASSIGNEE</AllowTransactionEdit>
    <TransactionDataModel>p6_demo.TransactionInfo</TransactionDataModel>
    <ViewNames>
        <Item>p6_demo.Transactions</Item>
        <WorkItem>p6_demo.Workflow Tasks</WorkItem>
    </ViewNames>

    <AllowRecall>false</AllowRecall>
    <AllowApproverDelegation>false</AllowApproverDelegation>
    
    <SendEmails>true</SendEmails>
    <EmailTemplate modelScript="p6_demo.WFHandlePO-BuildEmail">file://${B2BOX_DATA}/resources/templates/p6demo_POReview.ftl</EmailTemplate>
    
    <Ttl id="expire">120</Ttl>
    
	<WorkItem script="p6_demo.WFWorkItemEnhancer"/>
    
    <Assignee name="DemoApp" path="/${INSTANCE_ID}" type="UNIT" scope="*=*">
        <Label>
            <EN>Supplier</EN>
            <FR>Fournisseur</FR>
        </Label>
    </Assignee>
    
	<StatusLabels>
	    <Label name="Received" >
            <EN>Received</EN>
            <FR>Reçue</FR>
        </Label>
        <Label name="Created" >
            <EN>Created</EN>
            <FR>Créée</FR>
        </Label>
        <Label name="Deprecated" >
            <EN>Deprecated</EN>
            <FR>Annulée</FR>
        </Label>
        <Label name="Accepted" >
            <EN>Order accepted</EN>
            <FR>Commande acceptée</FR>
        </Label>
        <Label name="Rejected" >
            <EN>Rejected</EN>
            <FR>Refusée</FR>
        </Label>
    </StatusLabels>
    
    <Actions>
        <Action id="accept" status="Accepted" type="ACTION" stop="true" script="p6_demo.WFHandlePO-HandleActionAcceptOrder">

            <Style>icon:fa-check,btn:btn-success</Style>

            <Label>
                <EN>Accept Order</EN>
                <FR>Accepter commande</FR>
            </Label>

           <Parameter>
                <Name>salesordernumber</Name>
                <Label>
                    <EN>Sales Order Number</EN>
                    <FR>Numéro de commande client</FR>
                </Label>
                <Mandatory>false</Mandatory>
                <InputType>TEXT</InputType>
            </Parameter>

        </Action>
                
        <Action id="reject" status="Rejected" type="ACTION" stop="true" script="p6_demo.WFHandlePO-HandleActionRejectOrder">
            
            <Style>icon:fa-times,btn:btn-danger,color:danger</Style> 
            
            <Label>
                <EN>Reject</EN>
                <FR>Refuser</FR>
            </Label>
            
            <Parameter>
	            <Name>reason</Name>
                <Label>
                    <EN>Reason</EN>
                    <FR>Motif</FR>
                </Label>
                <Mandatory>false</Mandatory>
                <InputType>TEXTAREA</InputType>
            </Parameter>
            
        </Action>
        
        <Action id="expire" status="EXPIRED" type="EXPIRE" display="false">
			<Expiry error="false"/>
		</Action>
        
    </Actions>
    
</WorkflowStep>
