<WorkflowStep enabled="true">
    
    <Description>
        <EN>RequestForQuotation - Answer or decline</EN>
        <FR>Devis - Répondre ou décliner</FR>
    </Description>
    
    <AllowTransactionEdit>ASSIGNEE</AllowTransactionEdit>
    <TransactionDataModel>p6_demo.TransactionInfo</TransactionDataModel>
    <ViewNames>
        <Item>p6_demo.Transactions</Item>
        <WorkItem>p6_demo.Workflow Tasks</WorkItem>
    </ViewNames>

    <AllowRecall>false</AllowRecall>
    <AllowApproverDelegation>false</AllowApproverDelegation>
    
    <SendEmails>false</SendEmails>

    <Ttl id="expire">120</Ttl>
    
	<WorkItem script="p6_demo.WFWorkflowTaskEnhancer"/>
    
    <Assignee name="DemoApp" path="/${INSTANCE_ID}" type="UNIT" scope="*=*">
        <Label>
            <EN>Supplier</EN>
            <FR>Fournisseur</FR>
        </Label>
    </Assignee>
    
	<StatusLabels>
	    <Label name="Received" >
            <EN>Received</EN>
            <FR>Reçue</FR>
        </Label>
        <Label name="Created" >
            <EN>Created</EN>
            <FR>Créée</FR>
        </Label>
        <Label name="Deprecated" >
            <EN>Deprecated</EN>
            <FR>Annulée</FR>
        </Label>
        <Label name="Provided" >
            <EN>Quote provided</EN>
            <FR>Quotation fournie</FR>
        </Label>
        <Label name="Declined" >
            <EN>Declined</EN>
            <FR>Déclinée</FR>
        </Label>
    </StatusLabels>
    
    <Actions>
        <Action id="send" status="Provided" type="FORM" stop="true" script="p6_demo.WFHandleRFQ-HandleActionProvideQuote">
            <Style>icon:fa-check,btn:btn-success</Style>

            <Label>
                <EN>Provide Quote</EN>
                <FR>Fournir Quotation</FR>
            </Label>

            <FormGenerator>p6_demo.WFHandleRFQ-ProvideFormForQuoteCreation</FormGenerator>
           
           <Parameter>
                <Name>rfq</Name>
                <Label>
                    <EN>rfq</EN>
                    <FR>rfq</FR>
                </Label>
                <Mandatory>false</Mandatory>
                <InputType>TEXT</InputType>
            </Parameter>
            
            <Parameter>
                <Name>lines</Name>
                <Label>
                    <EN>lines</EN>
                    <FR>lines</FR>
                </Label>
                <Mandatory>false</Mandatory>
                <InputType>TEXT</InputType>
            </Parameter>
        </Action>
                
        <Action id="deprecate" status="Declined" type="ACTION" stop="true" script="p6_demo.WFHandleRFQ-HandleActionDecline">
            <Style>icon:fa-times,btn:btn-danger,color:danger</Style> 
            
            <Label>
                <EN>Decline</EN>
                <FR>Décliner quot.</FR>
            </Label>
            
            <Parameter>
	            <Name>reason</Name>
                <Label>
                    <EN>Reason</EN>
                    <FR>Motif</FR>
                </Label>
                <Mandatory>false</Mandatory>
                <InputType>TEXTAREA</InputType>
            </Parameter>
        </Action>
        
        <Action id="expire" status="EXPIRED" type="EXPIRE" display="false">
			<Expiry error="false"/>
        </Action>
    </Actions>
    
</WorkflowStep>
